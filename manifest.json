{
  "name": "BuscacursosUC",
  "version": "0.3.8",
  "short_name": "BuscacursosUC",
  "description": "Guarda diferentes horarios en el buscacursos UC",
  "author": "pdpino",
  "permissions": [
    "cookies",
    "*://buscacursos.uc.cl/",
    "declarativeContent",
    "storage",
    "notifications"
  ],
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "img/book/16.png",
      "32": "img/book/32.png",
      "48": "img/book/48.png",
      "128": "img/book/128.png"
    }
  },
  "icons": {
    "16": "img/book/16.png",
    "32": "img/book/32.png",
    "48": "img/book/48.png",
    "128": "img/book/128.png"
  },
  "manifest_version": 2
}
